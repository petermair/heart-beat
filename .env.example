THINGSBOARD_VERIFY_SSL=true

# ChirpStack Settings
CHIRPSTACK_API_VERSION=v3
CHIRPSTACK_TIMEOUT=30
CHIRPSTACK_VERIFY_SSL=true

# SSL Monitoring
SSL_MONITORING_ENABLED=true
SSL_WARNING_DAYS=30
SSL_CRITICAL_DAYS=7

# Health Check Settings
RESPONSE_TIME_WARNING=1000
RESPONSE_TIME_CRITICAL=5000
ERROR_RATE_WINDOW=3600
ERROR_RATE_THRESHOLD=0.05
