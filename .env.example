# Monitoring Settings
MONITORING_CHECK_INTERVAL=300
MONITORING_TIMEOUT=30
MONITORING_RETRY_ATTEMPTS=3
MONITORING_RETRY_DELAY=60

# Alert Settings
ALERT_COOLDOWN=900
ALERT_BATCH_SIZE=100
ALERT_MAIL_ENABLED=true
ALERT_MAIL_QUEUE=notifications
